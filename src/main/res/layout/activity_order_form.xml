<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".OrderFormActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05349c"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout1">
        <ImageView
            android:id="@+id/backicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Form"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/custcode"
                        android:hint="Customer Code"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/custname"
                        android:hint="Customer Name"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/vndrcode"
                        android:hint="Vendor Code"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/vndrname"
                        android:hint="Vendor Name"
                        android:inputType="text"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/oderdtype"
                        android:hint="Order Type"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/billingtype"
                        android:hint="Billing Type"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/parcels"
                        android:hint="No. Of Paecels"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:gravity="center"
                        android:paddingTop="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/dispatchdate"
                        android:gravity="center"
                        android:hint="Dispatching Date"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/lorry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Lorry"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/bookingstation"
                        android:hint="Booking Station"
                        android:gravity="center"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/shippingto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Shipping to"
                        android:inputType="text"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/manualorderno"
                        android:hint="Order Number"
                        android:gravity="center"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/itemcode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Item Code"
                        android:gravity="center"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/itemname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Item Name"
                        android:inputType="text"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/designno"
                        android:hint="Design Number"
                        android:inputType="text"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/size"
                        android:hint="Size"
                        android:gravity="center"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/qty"
                        android:hint="Quantity"
                        android:inputType="text"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp" />

                    <EditText
                        android:id="@+id/rate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Rate"
                        android:inputType="text"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/submitbtn"
                android:text="Submit"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

















